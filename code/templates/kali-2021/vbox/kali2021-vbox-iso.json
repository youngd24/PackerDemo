{
  
  "builders": [
    {
      "type": "virtualbox-iso",

      "keep_registered": "true",
      "skip_export": false,

      "headless": false,

      "boot_command": [
        "<esc><wait>",
        "/install.amd/vmlinuz<wait>",
        " auto<wait>",
        " console-setup/ask_detect=false<wait>",
        " console-setup/layoutcode=us<wait>",
        " console-setup/modelcode=pc105<wait>",
        " debconf/frontend=noninteractive<wait>",
        " debian-installer=en_US<wait>",
        " fb=false<wait>",
        " initrd=/install.amd/initrd.gz<wait>",
        " kbd-chooser/method=us<wait>",
        " netcfg/choose_interface=eth0<wait>",
        " console-keymaps-at/keymap=us<wait>",
        " keyboard-configuration/xkb-keymap=us<wait>",
        " keyboard-configuration/layout=USA<wait>",
        " keyboard-configuration/variant=USA<wait>",
        " locale=en_US<wait>",
        " netcfg/get_domain=vm<wait>",
        " netcfg/get_hostname=kali<wait>",
        " grub-installer/bootdev=/dev/sda<wait>",
        " noapic<wait>",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg auto=true priority=critical",
        " -- <wait>",
        "<enter><wait>"
      ],

      "http_directory": "http",
      "boot_wait": "10s",
      "disk_size": 81920,
      "shutdown_command": "echo 'kali'|sudo -S shutdown -P now",
      
      "guest_os_type": "Debian_64",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      
      "iso_checksum": "sha256:265812bc13ab11d40c610424871bdf9198b9e7cad99b06540d96fac67dd704de",
      "iso_urls": [
        "iso/kali-linux-2021.1-installer-amd64.iso",
        "https://cdimage.kali.org/kali-2021.1/kali-linux-2021.1-installer-amd64.iso"
      ],
      
      "ssh_password": "kali",
      "ssh_port": 22,
      "ssh_timeout": "10000s",
      "ssh_username": "kali",
      
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "4096"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "1"
        ]
      ],

      "virtualbox_version_file": ".vbox_version",
      "vm_name": "packer-kali-2021.1"
    }
  ],

  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": true,
      "output": "builds/{{.Provider}}-kali-2021.1.box"
    },
    {
      "type": "manifest",
      "output": "packer-kali-2021.manifest",
      "strip_path": true
    },
    {
      "type": "checksum",
      "checksum_types": "sha256",
      "output": "packer-kali-2021.checksum"
    }
  ],

  "provisioners": [
    {
      "execute_command": "echo 'kali' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "only": [
        "virtualbox-iso"
      ],
      "script": "scripts/virtualbox-guest-additions.sh",
      "type": "shell"
    },
    {
      "execute_command": "echo 'kali' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/ansible.sh",
      "type": "shell"
    },
    {
      "execute_command": "echo 'kali' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/setup.sh",
      "type": "shell"
    },
    {
      "playbook_file": "scripts/vagrant-setup.yml",
      "type": "ansible-local"
    },
    {
      "execute_command": "echo 'kali' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/cleanup.sh",
      "type": "shell"
    }
  ],
  "variables": {
    "password": "",
    "username": ""
  }
}

